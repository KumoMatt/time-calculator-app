<?xml version='1.0' encoding='utf-8'?>
<widget id="com.timecalculator.app" version="1.0.0" 
        xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://phonegap.com/ns/1.0">
    
    <name>Calcolatrice Orari</name>
    <description>App per calcolare gli orari delle attivit√† con notifiche</description>
    <author email="kumokumomatt@gmail.com">KumoMatt</author>
    
    <content src="index.html" />
    <access origin="*" />
    
    <!-- Preferenze Android -->
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="33" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    
    <!-- Plugin per Notifiche -->
    <plugin name="cordova-plugin-local-notification" spec="^0.9.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    
    <!-- Permessi Android -->
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-windowSoftInputMode" value="adjustResize" />
        
        <!-- Icone -->
        <icon density="ldpi" src="res/android/ldpi.png" />
        <icon density="mdpi" src="res/android/mdpi.png" />
        <icon density="hdpi" src="res/android/hdpi.png" />
        <icon density="xhdpi" src="res/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/xxxhdpi.png" />
    </platform>
    
</widget>